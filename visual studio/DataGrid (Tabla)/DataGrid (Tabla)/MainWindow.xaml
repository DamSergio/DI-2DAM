<Window x:Class="DataGrid__Tabla_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGrid__Tabla_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="tbPersonas" ItemsSource="{Binding Path=personas}" AutoGenerateColumns="True" Margin="0,10,489,107"/>
        <Button x:Name="btnAccept" Content="Insertar" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" Width="156" Height="45" Click="btnAccept_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="122" Height="40"/>
        <TextBox x:Name="txtApe" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Apellido" VerticalAlignment="Center" Width="122" Height="40"/>
        <Button x:Name="btnDel" Content="Borrar" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="156" Height="45" Click="btnDel_Click"/>
        <Button x:Name="btnUpdate" Content="Actualizar" HorizontalAlignment="Left" Margin="507,282,0,0" VerticalAlignment="Top" Height="45" Width="139" Click="btnUpdate_Click"/>

    </Grid>
</Window>
